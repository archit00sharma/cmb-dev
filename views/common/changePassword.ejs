<%- include("../../partials/head") %>

<body class="bg-danger">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <%- include("../../partials/alertMsg") %>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-11">
                            <div class="card my-5">
                                <div class="card-body p-3 text-center">
                                    <div class="h3 font-weight-light" style="color: rgba(219, 53, 70, 1) !important">
                                        Change Password
                                    </div>
                                </div>
                                <hr class="my-0 border-light" />
                                <div class="card-body p-4">
                                    <form method="POST" action="<%= adminRoutePrefix %>/change-admin-password-data">
                                        <div class="form-group">
                                            <label type="password" class="text-red-600 small"
                                                for="currentPassword">Current Password**</label>
                                            <input name="currentPassword" class="form-control form-control-solid py-4"
                                                type="password" placeholder="Current Password"
                                                aria-describedby="currentPassword" required
                                                autocomplete="current-password" />
                                        </div>
                                        <div class="form-group">
                                            <label type="password" class="text-red-600 small"
                                                for="newPasswordExample">New Password*</label>
                                            <input class="form-control form-control-solid py-4" type="password"
                                                placeholder="New Password" aria-describedby="newPasswordExample"
                                                name="newPassword" required autocomplete="new-password" />
                                        </div>
                                        <div class="form-group">
                                            <label type="password" class="text-red-600 small"
                                                for="newPasswordExample1">Confirm Password*</label>
                                            <input class="form-control form-control-solid py-4" type="password"
                                                placeholder="New Password" aria-describedby="newPasswordExample1"
                                                name="confirmPassword" required autocomplete="new-password" />
                                        </div>
                                        <div class="form-group align-items-center justify-content-between mb-0">
                                            <button type="submit" class="btn btn-danger btn-block"
                                                style="margin: 10px 0px">
                                                Submit
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="card my-0 bg-transparent shadow-none border-0">
                                <div class="card-body p-3 text-center bg-transparent">
                                    <a href="<%= adminRoutePrefix %>" class="btn btn-primary">
                                        <i class="fad fa-long-arrow-alt-left"></i>
                                        &nbsp;&nbsp;&nbsp; Return to Dashboard 
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">

            <%- include("../../partials/footer") %>